<?xml version="1.0" encoding="utf-8"?>
<phpdox xmlns="http://xml.phpdox.net/config">
    <project name="Easy ZUGFeRD for PHP" source="${basedir}/src" workdir="${basedir}/build/phpdox">
        <collector backend="parser" publiconly="true">
            <include mask="*.php"/>
        </collector>
        <generator output="${basedir}/build/doc">
            <build engine="html">
                <file extension="html"/>
            </build>
            <enrich base="${basedir}/build">
                <source type="phploc">
                    <file name="logs/phploc.xml"/>
                </source>
                <source type="git">
                    <git binary="/usr/bin/git"/>
                    <history enabled="true" limit="15" cache="${phpDox.project.workdir}/gitlog.xml" />
                </source>
                <source type="phpunit">
                    <coverage path="coverage"/>
                </source>
            </enrich>
        </generator>
    </project>
</phpdox>